<header>
  <nav class="navbar navbar-expand-lg navbar-info bg-info">
    <div class="container">
      <%= link_to image_tag('logo.png', width: '40%', height: '50%', class: "ml-5"), root_path %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <!--施設側ログイン後表示-->
          <% if facility_signed_in? %>
            <li>
              <%= link_to "マイページ", facility_facility_path(current_facility.id) %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_facility_session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to "新規登録", new_facility_registration_path %>
            </li>
            <li>
              <%= link_to "ログイン", new_facility_session_path %>
            </li>
          <% end %>
          
          <!--個人側ログイン後表示-->
          <% if reader_signed_in? %>
            <li>
              <%= link_to "ログアウト(個人)", destroy_reader_session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to "新規登録(個人)", new_reader_registration_path %>
            </li>
            <li>
              <%= link_to "ログイン(個人)", new_reader_session_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  </header>