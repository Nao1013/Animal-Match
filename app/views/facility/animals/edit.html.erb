<div class="container text-center">
  <hi><%= @animal.name %>の編集</hi>
  
  <%= form_with model: @animal, url: facility_animal_path do |f| %>
  
  <label for="inputImage", class="mt-3">画像選択</label><br>
  <%= f.file_field :images, accept: "image/*",  multiple: true %><br>
  
  <%= f.text_area :introduct, class: "mt-3" %><br>
  
  <div class="field">
    <%= f.label"タグ (#で区切ると複数タグ登録できます)" %>
    <%= f.text_field :name,value: @tag_list,class:"form-control"%>
  </div>
  
  <%#=　犬・猫選択（固定）%>
  <%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>
<%= link_to "back", facility_animal_path(@animal) %>
</div>