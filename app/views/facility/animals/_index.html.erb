<div class="row">
  <% animals.each do |animal| %>
    <div class="col-sm-4 col-md-4 mt-4">
      <%= link_to facility_animal_path(animal.id) do %>
      <% if animal.images.attached? %>
        <%= image_tag animal.images.first, class: "rounded-circle", size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200", class: "rounded-circle" %>
        <% end %>
        <div class="text-center"><%= animal.name %></div>
      <% end %>
      <div class="text-center">
        <i class="fas fa-star favo"></i><%= animal.favorites.count %>
        <i class="far fa-comment ml-3"></i><%= animal.comments.count %>
      </div>
    </div>
    <% end %>
  </div>