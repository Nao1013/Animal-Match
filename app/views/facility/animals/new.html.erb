<div class="contaner text-center">
  <h3 class="mt-3 ">新規投稿</h3>

  <%= form_with model: @animal, url: facility_animals_path do |f| %>

  <!--画像選択-->
    <div class="field">
      <%= f.label :"画像選択", class: "font-weight-bold" %><br>
      <%= f.file_field :images, accept: "image/*",multiple: true %>
    </div>

    <!--動物の名前記入-->
    <div class="field">
      <%= f.label :"お名前", class: "font-weight-bold mt-3" %><br>
      <%= f.text_field :name, class: "form", placeholder: "ポチ/タマ" %>
    </div>

      <!--動物についての説明欄-->
    <div class="field">
      <%= f.label :"説明", class: "font-weight-bold mt-3" %><br>
      <%= f.text_area :introduct,placeholder: "性格や保護期間など", class: "col-7",rows: "20" %>
    </div>
      <!--犬・猫種類-->
    <div class="check_box mt-3">
      <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) do |genre| %>
        <!--<div class='form-check'>-->
       　<%= genre.label do %>
        　 <%= genre.check_box %>
        　 <%= genre.text %>
        　<% end %>
        <!--</div>-->
      <% end %>
    </div>

    <!--<div class="input-field mt-3">-->
    <!--  <h4>タグ付け</h4>-->
    <!--  <%#= f.text_field :tag, placeholder: "タグを複数つけるには' , 'で区切ってください", class: "col-7" %>-->
    <!--</div>-->

    <%= f.submit '新規投稿', class: "btn btn-success mt-3" %>
  <% end %>
</div>