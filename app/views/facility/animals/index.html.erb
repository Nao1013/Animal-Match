<div class="container">
  <!--フラッシュメッセージ-->
  <% if notice %>
    <div class="alert alert-success mt-3">
      <%= notice %>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-3">
      <!--施設側のプロフィール-->
      <%= image_tag @facility.get_profile_image(150,200), class: "rounded-circle mt-3", size: "150x150" %>
      <%= render 'facility/facilities/profile', facility: current_facility %>

      <!--新規投稿-->
      <% if !current_facility.guest? %>
        <%= link_to "新規投稿", new_facility_animal_path, class: "btn btn-success mt-3" %>
      <% else %>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-success mt-3" data-toggle="modal" data-target="#exampleModal">
          新規投稿
        </button>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title text-danger" id="exampleModalLabel">※新規登録のお願いします※</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                ゲストログインでは、新規投稿はできません。<br>
                ご利用になりたい場合は、新規登録をお願い致します。
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      <% end %><br>
      
      <% if !current_facility.guest? %>
        <%= link_to "マイページ", facility_facility_path(current_facility.id), class: "btn btn-primary mt-3"  %><br>
        <%= link_to "DM", facility_rooms_path, class: "btn btn-info mt-3" %>
      <% end %>
    </div>

    <div class="col-1"></div>

    <div class="col-8 mt-3">

      <!--投稿した動物（犬・ネコ限定）-->
      <%= form_tag facility_animals_path, method: :get, class: 'boards__searchForm' do %>

      <!--タブ分け-->
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <%= link_to "一覧", facility_animals_path, class: "nav-link active" %>
        </li>
        <% @genres.each do |genre| %>
       <li class="nav-item">
          <%= link_to genre.name, facility_animals_path(name: genre.id), class: "nav-link" %>
        <% end %>
      </li>
      </ul>
      <% end %>

      <!--犬・ネコ投稿一覧-->
      <div class="row mt-5">
        <% @animals.each do |animal| %>
        <div class="col-4">
          <%= link_to facility_animal_path(animal.id) do %>
          <% if animal.images.attached? %>
            <%= image_tag animal.images.first, class: "rounded-circle", size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200", class: "rounded-circle" %>
            <% end %>
            <p class="text-center"><%= animal.name %></p>
          <% end %>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
