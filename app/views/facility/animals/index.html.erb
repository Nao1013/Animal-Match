<div class="container">
  <div class="row">
    <div class="col3">
    <%= link_to "新規投稿", new_facility_animal_path, class: "btn btn-success mt-3" %>
    </div>
    <div class="col-1"></div>
    
    <div class="col-9">
      <div class="row mt-5">
        <% @animals.each do |animal| %>
        <div class="col-4">
          <%= link_to facility_animal_path(animal.id) do %>
            <%= image_tag animal.get_images.first, class: "rounded-circle", size: "200x200" %>
            <p class="text-center"><%= animal.name %></p>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
