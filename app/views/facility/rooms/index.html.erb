<div class="container text-center">
  <h3 class="mt-3">チャット一覧</h3>
  <% @readers.each do |reader| %>
    <div class="mt-3">
      <%= link_to facility_room_path(reader) do %>
      <%= image_tag reader.get_profile_image(150,150), class: "rounded-circle", size: "150x150" %>
       <%= reader.user_name %>
      <% end %>
    </div>
  <% end %>
</div>