<div class="container text-center">
  <div class="swiper">
    <div class="swiper-wrapper">
     <% if @animal.images.attached? %>
      <% @animal.images.each do |image| %>
      <div class="swiper-slide">
        <%= image_tag image, size: "500x400", class: "mt-3" %>
         </div> 
        <% end %>
      <% end %>
    </div>

    <div class="swiper-pagination"></div>
      <!-- ナビゲーションボタン （前、次） -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div><br>
  
  <%= @animal.name %><br>

  <div class="card">
    <div class="card-body">
      <%= @animal.introduct %><br>
    </div>
  </div>

  <!--★『気になる』ボタン-->
  <div id="favorite_btn_<%= @animal.id %>">
    <div class="favorite_btn"><%= render 'reader/favorites/favorite', animal: @animal %></div>
  </div>

  <!--動物種-->
  <% @animal.genres.each do |genre| %>
    <%= genre.name %>
  <% end %><br>

<!--タグ-->
  <!--<%# @tags.each do |tag| %>-->
  <!--  <%#= link_to reader_animals_path(tag: tag) do %>-->
  <!--    <i class="fas fa-tag"></i><%#= tag %>　<!--タグ用-->
  <!--  <%# end %>-->
  <!--<%# end %><br>-->
  <%= @animal.created_at.strftime('%Y/%m/%d') %><br>
  
  <% if @animal.is_decided %>
    <span class="text-danger font-weight-bold">家族が決まりました</span>
  <% else %>
    <span class="text-success font-weight-bold">募集中</span>
  <% end %><br>

   <%= link_to "一覧へ", reader_animals_path, class: "btn btn-primary" %><br>

   <%= link_to "施設詳細", reader_facility_path(@facility), class: "btn btn-warning mt-3" %><br>
   
   <%= link_to "施設へメッセージを送る", reader_message_path(@facility) %>
</div>
