<div class="container">
  <div class="row">
    <div class="col3 mt-3">
      <h3>プロフィール</h3>
    </div>
    
    <div class="col-1"></div>
    
    <div class="col-9 mt-3">
      <!--投稿した動物（犬・ネコ限定）-->
      <%= form_tag reader_animals_path, method: :get, class: 'boards__searchForm' do %>
      
      <!--タブ分け-->
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <%= link_to "一覧", reader_animals_path, class: "nav-link active" %>
        </li>
        <% @genres.each do |genre| %>
       <li class="nav-item">
          <%= link_to genre.name, reader_animals_path(name: genre.id), class: "nav-link" %>
        <% end %>
      </li>
      </ul>
      <% end %>
      
      <!--動物一覧-->
      <div class="row mt-5">
      <% @animals.each do |animal| %>
        <div class="col-4">
          <%= link_to reader_animal_path(animal.id) do %>
            <%= image_tag animal.images.first, class: "rounded-circle", size: "200x200" %>
            <p class="text-center"><%= animal.name %></p>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
