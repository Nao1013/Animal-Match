<div class="container">
  <h1 id="room" data-room="<%= @room.id %>" data-user="<%= current_reader.id %>">
    <%= @facility.facility_name %> さんとのチャット</h1>
    
    <div class="message" style="width: 400px;">
      <% @messages.each do |message| %>
        <% if message.reader_id == current_reader.id %>
          <p style="text-align: right;"><%= message.message %></p>
        <% else %>
          <p style="text-align: left;"><%= message.message %></p>
        <% end %>
      <% end %>
    </div>
    
    <div class="errors">
      <%= render "layouts/errors", obj: @message %>
    </div>
    
    <%= form_with model: @message, data: {remote: true} do |f| %>
      <%= f.text_field :message %>
      <%= f.hidden_field :room_id %>
    <% end %>
</div>